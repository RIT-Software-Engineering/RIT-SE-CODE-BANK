generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // Use mysql for MariaDB
  url      = env("DATABASE_URL")
}

model Templates {
  id           String  @id @default(uuid())
  title        String
  description  String
  rows         String?
  columns      String?
  criteria_row Int

  Rubrics Rubrics[]
}

model Rubrics {
  id          String @id @default(uuid())
  title       String
  description String
  rows        Int
  columns     Int
  template_id String

  criteria Criteria[]
  template Templates  @relation(fields: [template_id], references: [id])
  Headers  Headers[]
}

model Headers {
  id          String @id @default(uuid())
  name        String
  description String
  points      Float?
  weight      Float?
  rubric_id   String

  rubric Rubrics @relation(fields: [rubric_id], references: [id])
}

model Criteria {
  id          String @id @default(uuid())
  name        String
  description String
  points      Float? // Optional
  weight      Float? // Optional
  rubric_id   String

  rubric Rubrics  @relation(fields: [rubric_id], references: [id])
  levels Levels[]
}

model Levels {
  id           String @id @default(uuid())
  name         String
  description  String
  points       Float? // Optional
  weight       Float? // Optional
  criterion_id String

  criterion Criteria @relation(fields: [criterion_id], references: [id])
}
