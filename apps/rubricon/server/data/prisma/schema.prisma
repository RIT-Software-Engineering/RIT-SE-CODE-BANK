generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql" // Use mysql for MariaDB
  url      = env("DATABASE_URL")
}

model Templates {
  id        String @id @default(uuid())
  rubric_id String @unique
  index     Int

  rubric Rubrics @relation(fields: [rubric_id], references: [id], onDelete: Cascade)
}

model Rubrics {
  id              String @id @default(uuid())
  title           String
  description     String @db.VarChar(4000)
  rows            Int
  columns         Int
  criteria_column Int

  criteria  Criteria[]
  headers   Headers?
  templates Templates?
}

model Headers {
  id        String @id @default(uuid())
  rubric_id String @unique

  rubric Rubrics  @relation(fields: [rubric_id], references: [id], onDelete: Cascade)
  titles Titles[]
}

model Titles {
  id          String  @id @default(uuid())
  name        String?
  description String?
  points      Float?
  weight      Float?
  header_id   String
  index       Int

  header Headers @relation(fields: [header_id], references: [id], onDelete: Cascade)
}

model Criteria {
  id          String  @id @default(uuid())
  name        String?
  description String? // TODO: figure out optimal max chars
  points      Float? // Optional
  weight      Float? // Optional
  rubric_id   String
  index       Int

  rubric Rubrics  @relation(fields: [rubric_id], references: [id], onDelete: Cascade)
  levels Levels[]
}

model Levels {
  id           String  @id @default(uuid())
  name         String?
  description  String? // TODO: figure out optimal max chars
  points       Float? // Optional
  weight       Float? // Optional
  criterion_id String
  index        Int

  criterion Criteria @relation(fields: [criterion_id], references: [id], onDelete: Cascade)
}
