{
  "name": "rubricon",
  "root": "apps/rubricon",
  "sourceRoot": "apps/rubricon/src",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "@nrwl/next:build",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/apps/rubricon"
      }
    },
    "serve": {
      "executor": "@nrwl/next:server",
      "options": {
        "buildTarget": "rubricon:build"
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["coverage/apps/rubricon"],
      "options": {
        "jestConfig": "apps/rubricon/jest.config.js",
        "passWithNoTests": true
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "options": {
        "lintFilePatterns": [
          "apps/rubricon/**/*.{ts,tsx,js,jsx}"
        ]
      }
    }
  },
  "tags": ["scope:rubricon", "type:app"]
}